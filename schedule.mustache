<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>{{docTitle}}</title>

    <style>
        h1 { font-size: 200%; }
        h2 { font-size: 167%; }
        h3 { font-size: 125%; }
        .day-head { }
        .time-slot-head {}
        .sticky-icky {
          position: -webkit-sticky;
          position: -moz-sticky;
          position: -o-sticky;
          position: -ms-sticky;
          position: sticky;
          top: 66px; /* header height */
          left: 0;
          right: 0;
          display: block;
          z-index: 1;
          background: #333;
          color: #fff;
          padding: 8px 0px 1px;
        }
        .calendar-style.pagination { margin-bottom: 0; margin-left: 12px; }
        .calendar-style.pagination-sm .page-link { font-size: 14px; }
        .calendar-style li { text-align: center; min-width: 3.75ex;}
        .pagination-sm .page-link { padding: 0.2rem 0.35rem; }
        .wkdy { font-size: 10px; }
        .badge { font-size: 66%; }
        .show-title a {text-decoration: none;}
    </style>
  </head>
  <body>
    <div class="container-fluid bg-light">
      <section class="header py-1">
              <h1>F<span class="text-muted">ast</span> F<span class="text-muted">ringe</span> S<span class="text-muted">chedule</span></h1>
      </section>
    </div>
    <nav class="navbar sticky-top navbar-light bg-light shadow-sm">
          <ul class="pagination pagination-sm calendar-style">
            {{#dayNav}}
              <li class="page-item {{active}}"><a class="page-link" href="schedule-{{slug}}.html"><span class="wkdy">{{dow}}</span><br/>{{dom}}</a></li>
            {{/dayNav}}
          </ul>
    </nav>
    <div class="container-fluid pt-3">
        {{! <h1>FFS <span class="text-muted">Faster Fringe Schedule</span></h1> }}
        {{! <div class="dayNav">
          <nav aria-label="...">

          </nav>
        </div> }}

                {{#dayMeta}}
                  <div class="row border-bottom">
                    <div class="col-12">
                      <h2 class="day-head">{{label}}</h2>
                    </div>
                  </div>
                {{/dayMeta}}

                {{#groupedEvents}}
                  <div class="row time-slot-head sticky-icky shadow-sm"><div class="col-12"><h3>{{timeSlot}}</h3></div></div>
                {{#events}}
                    <div class="row event border-bottom">
                        <div class="col-12 col-lg-6 text-truncate show-title"><a target="source" href="{{showUrl}}">{{showTitle}}</a></div>
                        <div class="col-12 col-lg-6">{{venue}} <span class="badge badge-info">{{serviceTags}}</span> </div>
                    </div>
                {{/events}}
                {{/groupedEvents}}

        <p class="x-small text-muted"><em>Data {{scrapeTime}}, built {{renderTime}}</em></p>
    </div>
  </body>
</html>